html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title TeamWallet

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main#billsVue(role="main" class="container")
      h1#pageTitle Wallet System | Bills
      .card.text-white.bg-success.mb-3#seven11(style="max-width: 18rem;")
        .card-header 7Eleven
        .card-body
          button.btn.btn-primary(data-toggle="modal" data-target="#modalSample") Click to pay

      modal.fade#modalSample(tabindex="-1" role="dialog" aria-labelledby="modalSampleLabel" aria-hidden="true")
        modal-dialog(role="document")
          modal-content
            modal-header
              h5.modal-title Modal title 
              button(type="button" class="close" data-dismiss="modal" aria-label="Close")
              span(aria-hidden="true") &times;
                modal-body
                  form#widthdrawMoney(action="/" method="POST")
                    input.form-control#userid(type="hidden" name="id" v-model="id")
                  .form-group
                    label Your Balance is :
                    input.form-control#balance(type = "text" name= "balance" v-model = "balance" readonly ="")
                  .form-group
                    label Enter Amount :
                    input.form-control#amount(type="text" name="amount" v-model="amount")      
                modal-footer
                  .form-group.float-right
                    button.btn.btn-success.mr-1(type = "button" v-on:click = "submit") Submit
                    button.btn.btn-danger(type = "button" v-on:click = "cancel" data-dismiss="modal") Cancel