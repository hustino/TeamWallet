html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title TeamWallet

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main#fundsVue(role="main" class="container")
      h1#pageTitle Wallet System | Funds Transfer
      form#transferFunds(action="/" method="POST")
        input.form-control#userid(type="hidden" name="id" v-model="id")
      .form-group
        label Enter Account Number :
        input.form-control#acct(type="text" name="acct" v-model="acct")
        label Enter amount :
        input.form-control#amt(type="text" name="amt" v-model="amt")        
      .form-group.float-right
        button.btn.btn-success.mr-1(type = "button" v-on:click = "submit") Transfer Funds
        a.btn.btn-danger.mr-1(type = "button" href = "/") Back
