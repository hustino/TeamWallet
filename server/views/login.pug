html(lang="en")
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title TeamWallet

    link(rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous")

  body
    main#loginVue(role="main" class="container")
      h1#pageTitle Wallet System | Login
       form#loginForm(action="/" method="POST")
          input.form-control#userid(type="hidden" name="id" v-model="id")
      .form-group
          label  Account Number :
          input.form-control#acct(required type = "text" name= "acct" v-model = "acct")
      .form-group
          label  Pin :
          input.form-control#pin(required type="password" maxlength="4" name="pin" v-model="pin")
      .form-group.float-right
          button.btn.btn-success.mr-1#login(type = "button" v-on:click.native = "login") Login
          
    script(src="/axios.min.js")
    script(src="https://cdn.jsdelivr.net/npm/vue/dist/vue.js")
    script(src="/login-vue.js")
    